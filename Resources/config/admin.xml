<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Admin Factory -->
        <parameter key="white_october_admin.admin_factory.class">Pablodip\ModuleBundle\Module\ModuleFactory</parameter>

        <!-- Action Factory -->
        <parameter key="white_october_admin.action_factory.class">Pablodip\ModuleBundle\Action\ActionFactory</parameter>

        <!-- Action Collection Factory -->
        <parameter key="white_october_admin.action_collection_factory.class">Pablodip\ModuleBundle\Action\ActionCollectionFactory</parameter>

        <!-- Routing Loader -->
        <parameter key="routing.loader.white_october_admin.class">WhiteOctober\AdminBundle\Routing\AdminFactoryLoader</parameter>

        <!-- Field Guessers -->
        <parameter key="white_october_admin.field_guesser.validator.class">WhiteOctober\AdminBundle\Field\Guesser\ValidatorFieldGuesser</parameter>
    </parameters>

    <services>
        <!-- Admin Factory -->
        <service id="white_october_admin.admin_factory" class="%white_october_admin.admin_factory.class%">
            <!-- adminIds -->
            <argument type="collection" />
            <!-- ContainerAware -->
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!-- Action Factory -->
        <service id="white_october_admin.action_factory" class="%white_october_admin.action_factory.class%">
        </service>

        <!-- Action Collection Factory -->
        <service id="white_october_admin.action_collection_factory" class="%white_october_admin.action_collection_factory.class%">
        </service>

        <!-- Routing Loader -->
        <service id="routing.loader.white_october_admin" class="%routing.loader.white_october_admin.class%">
            <tag name="routing.loader" />
            <argument type="service" id="white_october_admin.admin_factory" />
        </service>

        <!-- Field Guessers -->
        <service id="white_october_admin.field_gueser.validator" class="%white_october_admin.field_guesser.validator.class%">
            <tag name="pablodip_module.field_guesser" alias="validator" />
            <argument type="service" id="validator.mapping.class_metadata_factory" />
        </service>
    </services>

</container>
